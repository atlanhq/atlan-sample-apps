{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run App (uv run)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/utilities/workflows_observability/main.py",
      "python": "${workspaceFolder}/utilities/workflows_observability/.venv/bin/python",
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/utilities/workflows_observability",
      "preLaunchTask": "workflows_observability: start-deps"
    },
    {
      "name": "Start deps (terminal)",
      "type": "node-terminal",
      "request": "launch",
      "command": "uv run poe start-deps",
      "cwd": "${workspaceFolder}/utilities/workflows_observability",
      "preLaunchTask": "workflows_observability: setup-deps"
    }
  ],
  "compounds": [
    {
      "name": "Run App + Deps",
      "configurations": [
        "Start deps (terminal)",
        "Run App (uv run)"
      ],
      "stopAll": true
    }
  ]
}