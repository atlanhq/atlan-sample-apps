{
    "config":
    {
        "properties":
        {
            "host":
            {
                "type": "string",
                "required": false,
                "ui":
                {
                    "widget": "input",
                    "label": "Host",
                    "placeholder": "source.corp.example.com",
                    "help": "The hostname or IP address of the server",
                    "grid": 8
                }
            },
            "auth-type":
            {
                "type": "string",
                "enum":
                [
                    "basic"
                ],
                "default": "basic",
                "required": true,
                "enumNames":
                [
                    "Basic"
                ],
                "ui":
                {
                    "widget": "radio",
                    "label": "Authentication",
                    "placeholder": "Credential Type",
                    "hidden": true,
                    "rules":
                    [
                        {
                            "required": true,
                            "message": "Please enter a valid authentication type"
                        }
                    ]
                }
            },
            "basic":
            {
                "type": "object",
                "properties":
                {
                    "extra":
                    {
                        "type": "object",
                        "properties":
                        {
                            "name":
                            {
                                "type": "string",
                                "required": false,
                                "ui":
                                {
                                    "label": "Name",
                                    "hidden": true
                                }
                            },
                            "connector":
                            {
                                "type": "string",
                                "default": "template",
                                "required": false,
                                "ui":
                                {
                                    "label": "Connector",
                                    "hidden": true
                                }
                            },
                            "source_name":
                            {
                                "type": "string",
                                "required": true,
                                "ui":
                                {
                                    "label": "Source Name",
                                    "help": "Enter a name to identify your data source",
                                    "placeholder": "my-data-source",
                                    "grid": 8,
                                    "rules":
                                    [
                                        {
                                            "required": true,
                                            "message": "Source name is required"
                                        }
                                    ]
                                }
                            }
                        },
                        "ui":
                        {
                            "widget": "nested",
                            "label": "Additional Settings",
                            "nestedValue": false,
                            "hidden": false
                        }
                    }
                },
                "ui":
                {
                    "widget": "nested",
                    "label": "Basic Authentication",
                    "nestedValue": false,
                    "hidden": true
                }
            }
        },
        "anyOf":
        [
            {
                "properties":
                {
                    "auth-type":
                    {
                        "const": "basic"
                    }
                },
                "required":
                [
                    "basic"
                ]
            }
        ]
    }
}